<div class="container">
  <div class="show-content">
    <div class="musician-banner">
    </div>
    <div class="group-description">
      <div class="row">
        <div class="col-md-5 image-content">
          <%= image_tag @musician.image.url, size: '430x500' %>
        </div>
        <div class="col-md-6 doc-content">
          <% if user_signed_in? %>
          <% if @musician.user == current_user %>
          <%= link_to 'Edit', edit_musician_path(@musician), class: 'btn btn-info' %> |
          <%= link_to 'Delete', musician_path, method: :delete, data: { confirm: 'Are you sure?' }, class:'btn btn-danger' %>
          <% end %>
          <% end %>
          <p>
            <strong>Name:</strong>
            <%= @musician.name %>
          </p>
          <p>
            <strong>Description:</strong>
            <%= @musician.description %>
          </p>

          <p>
            <strong>Genre:</strong>
            <%= @musician.genre %>
          </p>

          <p>
            <strong>Origin:</strong>
            <%= @musician.origin.name %>
          </p>
        </div>
      </div>
    </div>
  </div>
</div>
