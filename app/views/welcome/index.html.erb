<div class="container-fluid">
  <%= render 'layouts/banner' %>
</div>
<div class="container">
    <form class="navbar-form navbar-left" role="search">
        <div class="form-group">
          <input type="text" class="form-control" placeholder="Search">

          <select class="selectpicker form-control">
            <option>Genre</option>
            <option>Venue</option>
            <option>Location</option>
          </select>

          <select class="selectpicker form-control">
            <option>Today</option>
            <option>Tomorrow</option>
            <option>This Week</option>
          </select>
        </div>
        <button type="submit" class="btn btn-default">Search</button>
    </form>
</div>
<div class="container">
  <div class="row">
  <% @events.each do |event| %>
    <% if event.origin_id == 1 %>
        <div class="col-md-4">
          <div class="main-photo">
            <%= link_to (image_tag(event.image, size: '400x200', class:'nametag-photo')), event_path(event) %>
            <div class="group-title">
              <h3><%= link_to event.title, event_path(event) %></h3>
              <p><%= link_to event.start_on, event_path(event) %></p>
              <p><%= link_to truncate(event.location, length: 50), event_path(event) %></p>
            </div>
          </div>
        </div>
        <% end %>
      <% end %>

  <% @events.each do |event| %>
    <% if event.origin_id == 2 %>
        <div class="col-md-4">
          <div class="main-photo">
            <%= link_to (image_tag(event.image, size: '400x200', class:'nametag-photo')), event_path(event) %>
            <div class="group-title">
              <h3><%= link_to event.title, event_path(event) %></h3>
              <p><%= link_to event.start_on, event_path(event) %></p>
              <p><%= link_to truncate(event.location, length: 50), event_path(event) %></p>
            </div>
          </div>
        </div>
        <% end %>
      <% end %>
  </div>
</div>
