<p id="notice"><%= notice %></p>

<h1>Listing Gigs</h1>
<%= link_to 'New Event', new_event_path %>
<table class="table table-splite">
  <thead>
    <tr>
      <th>Image</th>
      <th>Title</th>
      <th>Description</th>
      <th>Start On</th>
      <th>Genre</th>
      <th>Venue</th>
      <th>Location</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @events.each do |event| %>
      <tr>
        <td><%= image_tag event.image.url, size: '100x100' %></td>
        <td><%= event.title %></td>
        <td><%= truncate(event.description, length: 50) %></td>
        <td><%= event.start_on %></td>
        <td><%= event.genre %></td>
        <td><%= event.venue %></td>
        <td><%= event.location %></td>
        <td><%= link_to 'Show', event %></td>
        <td><%= link_to 'Edit', edit_event_path(event) %></td>
        <td><%= link_to 'Destroy', event, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
