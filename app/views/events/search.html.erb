<div class="container-fluid">
  <%= render 'layouts/banner' %>
</div>
<div class="container">
<div class="row">
  <div class="col-md-8 col-md-off-2 search">
  <%= form_tag search_events_path, method: :get do %>
  <div class="col-md-10">
  <%= text_field_tag :search, params[:search], class: 'form-control', placeholder:"Search title, genre, venue, location" %>
  </div>
  <%= submit_tag 'Search', name: nil, class: 'btn btn-danger' %>
  <% end %>
  </div>
  </div>
</div>
<div class="container">
  <div class="row">
    <h1 class="text-center">Search Gigs</h1>
    <% if @events.count == 0 %>
    <h1 class="text-center">No Result</h1>
    <% else %>
    <% @events.each do |event| %>
    <div class="col-md-4">
      <div class="main-photo">
        <%= link_to (image_tag(event.image, size: '400x200', class:'nametag-photo')), event_path(event) %>
        <div class="group-title">
          <h3><%= link_to event.title, event_path(event) %></h3>
          <p><%= link_to event.start_on.strftime("%Y %m %d %I %M %p"), event_path(event) %></p>
          <p><%= link_to truncate(event.location, length: 50), event_path(event) %></p>
        </div>
      </div>
    </div>
    <% end %>

    <% end %>
  </div>
</div>
