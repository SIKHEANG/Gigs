<div class="container">
  <div class="show-content">
    <div class="chapter-banner">
      <h1><%= @event.title %></h1>
    </div>
    <div class="group-description">
      <div class="row">
        <div class="col-md-5 image-content">
          <%= image_tag @event.image.url, size: '430x500', class: 'img-responsive' %>
        </div>
        <div class="col-md-6 doc-content">
          <% if user_signed_in? %>
          <% if @event.user == current_user %>
          <%= link_to 'Edit', edit_event_path(@event), class: 'btn btn-info' %> |
          <%= link_to 'Delete', event_path, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' %>
          <% end %>
          <% end %>

          <%= link_to 'Join Us',new_event_register_path(@event), :data => {:toggle => "modal"}, :data =>{:target =>"#myModal'"}, class: 'btn btn-success' %>

          <%= pluralize(@event.registers.count, 'Member') %>
          <h3>Description:</h3>
          <p><%= @event.description %></p>
          <p>
            <strong>Start On:</strong>
            <%= @event.start_on.strftime("%d %m %Y") %>
          </p>
          <p>
            <strong>Start On:</strong>
            <%= @event.start_on.strftime("%H : %M %p") %>
          </p>
          <p>
            <strong>Genre:</strong>
            <%= @event.genre %>
          </p>
          <p>
            <strong>Venue:</strong>
            <%= @event.venue %>
          </p>
          <p>
            <strong>Location:</strong>
            <%= @event.location %>
          </p>
          <p>
            <strong>Origin:</strong>
            <% if @event.origin.id == 1 %>
            <%=  @event.origin.name %>
            <% elsif @event.origin.id == 2 %>
            <%=  @event.origin.name %>
            <% end %>
          </p>
        </div>
      </div>
    </div>
  </div>
</div>
